<div class="form-group">
    <label class="form-label" {{#inline}}class="sr-only" {{/inline}}for="{{name}}">{{alias}}</label>
    {{#if properties.textarea}}
      <textarea ($keydown)="beforeSubmit(%element, %event)" placeholder="{{properties.placeholder}}" id="{{name}}" class="form-control form-input" name="{{name}}" {($value)}="value"></textarea>
    {{else}}
      <input ($keydown)="beforeSubmit(%element, %event)" placeholder="{{properties.placeholder}}" type="{{#if properties.type}}{{properties.type}}{{else}}text{{/if}}" class="form-control form-input" id="{{name}}" name="{{name}}" {($value)}="value" />
    {{/if}}
</div>
